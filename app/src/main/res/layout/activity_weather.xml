<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?myBackgroundGradient"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/weather"
        android:layout_width="0dp"
        android:layout_height="700dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/date_and_time"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="to be deleted"
            android:textSize="24sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="75dp" />

        <TextView
            android:id="@+id/CityName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="City"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/CityTemperature"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="100째"
            android:textAlignment="center"
            android:textSize="90sp" />

        <TextView
            android:id="@+id/CityWeather"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Foggy"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/CityTemperatureRange"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="H:100째 L:-77째"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold" />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <TextView
                android:id="@+id/CityWind"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_row="0"
                android:layout_column="0"
                android:text="WIND\n8 MPH \n compass image"
                android:textAlignment="textStart"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/CityHumidity"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_row="0"
                android:layout_column="1"
                android:text="HUMIDITY\n81%\ndew point is 30째 now."
                android:textAlignment="textStart"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/CityMetric1"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_row="1"
                android:layout_column="0"
                android:text="Metric 1"
                android:textAlignment="textStart"
                android:textSize="25sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/CityMetric2"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_row="1"
                android:layout_column="1"
                android:text="Metric 2"
                android:textAlignment="textStart"
                android:textSize="25sp"
                android:textStyle="bold" />
        </GridLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>