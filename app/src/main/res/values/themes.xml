<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Day" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Additional theme. -->
    <style name="Theme.Night" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Color for primary components like the status bar -->
        <item name="colorPrimary">#FFA000</item>
        <item name="colorPrimaryDark">#FFA000</item>
        <item name="colorAccent">#FFA000</item>
        <!-- Text colors -->
        <item name="android:textColor">#E0E0E0</item>
        <item name="android:textColorPrimary">#E0E0E0</item>
        <item name="android:textColorSecondary">#B0B0B0</item>
        <!-- Background colors -->
        <item name="android:windowBackground">#121212</item>
        <item name="android:background">#242424</item>
        <!-- Divider color -->
        <item name="android:divider">#3A3A3A</item>
    </style>

    <!-- Additional theme. -->
    <style name="Theme.Dawn" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_200</item>
        <item name="colorSecondaryVariant">@color/orange_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Additional theme. -->
    <style name="Theme.Dusk" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_200</item>
        <item name="colorSecondaryVariant">@color/green_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize your dialog here. Example: change the background color -->
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>